<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>DataTables</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">DataTables</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">
        <div class="card">
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="daListTable" class="table table-bordered table-striped">

                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
@section PageCss
    {
    <link rel="stylesheet" href="~/plugins/datatables-bs4/css/dataTables.bootstrap4.css">
}
@section PagePlusgins
    {
    <!-- DataTables -->
    <script src="~/plugins/datatables/jquery.dataTables.js"></script>
    <script src="~/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
}
@section PageScripts
    {
    <script>
$(function () {
            $.fn.dataTable.ext.errMode = 'throw';
            $('#daListTable').dataTable({
                "oLanguage": {
                    "sUrl": "@Url.Content("~/static/datatables_language.json")"
                },
                "bProcessing": true,
                "bSearchable": true,
                "bServerSide": true,
                "sAjaxSource": "@Url.Content("~/da/search")",
                "aoColumns" : [{
                        "mDataProp" : "id",
                        "sDefaultContent" : "", //此列默认值为""，以防数据中没有此值，DataTables加载数据的时候报错
                        "bVisible" : false //此列不显示
                    }, {
                        "mDataProp" : "USERNAME",
                        "sTitle" : "档案号",
                        "sDefaultContent" : "",
                        "sClass" : "center"
                    }, {
                        "mDataProp" : "EMAIL",
                        "sTitle" : "分类号",
                        "sDefaultContent" : "",
                        "sClass" : "center"
                    }, {
                        "mDataProp" : "MOBILE",
                        "sTitle" : "案卷号",
                        "sDefaultContent" : "",
                        "sClass" : "center"
                    }, {
                        "mDataProp" : "PHONE",
                        "sTitle" : "题名",
                        "sDefaultContent" : "",
                        "sClass" : "center"
                    }, {
                        "mDataProp" : "PHON1E",
                        "sTitle" : "名称",
                        "sDefaultContent" : "",
                        "sClass" : "center"
                    }]

            });
        });</script>
}
