@model LoginUserModel
@{
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>DataTables</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">DataTables</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="daListTable" class="table table-bordered table-striped"></table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
@section PageCss
    {
    <link rel="stylesheet" href="~/plugins/datatables-bs4/css/dataTables.bootstrap4.css">
}
@section PagePlusgins
    {
    <!-- DataTables -->
    <script src="~/plugins/datatables/jquery.dataTables.js"></script>
    <script src="~/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
}
@section PageScripts
    {
    <script>
$(function () {
            $.fn.dataTable.ext.errMode = 'throw';
            $('#daListTable').dataTable({
                "oLanguage": {
                    "sUrl": "@Url.Content("~/static/datatables_language.json")"
                },
                "bProcessing": true,
                "bSearchable": true,
                "bServerSide": true,
                "sAjaxSource": "@Url.Content("~/archives/searchArchives")",
                "fnServerData": function ( sSource, aoData, fnCallback ) {
                    var ds;
                    var sl;
                    var key;
                    for(var i = 0; i < aoData.length; i++)
                    {
                      if(aoData[i].name == 'iDisplayStart')
                      {
                          ds = aoData[i].value;
                      }
                      if(aoData[i].name == 'iDisplayLength')
                      {
                          dl = aoData[i].value;
                      }
                      if(aoData[i].name == 'sSearch')
                      {
                          key = aoData[i].value;
                      }
                    }
                    aoData.push( {"name": "PageNumber", "value": ds / dl} );
                    aoData.push( {"name": "PageSize", "value": dl} );
                    aoData.push( {"name": "Keyword", "value": key} );
                    $.ajax( {
                            headers: {
                                Accept: "application/json; charset=utf-8",
                                Authorization: "Bearer @Model.Token"
                            },
                            "dataType": 'json',
                            "type": "GET",
                            "url": sSource,
                            "data": aoData,
                            "success": function(result){
                                if (result.success) {
                                    var ooret = {
                                        "sEcho": result.SEcho,
                                        "iTotalRecords": result.totalCount,
                                        "iTotalDisplayRecords": result.totalCount,
                                        "aaData": result.data
                                    }
                                    console.log(fnCallback)
                                    fnCallback(ooret)
                                } else {
                                    fnCallback(null)
                                }
                            }

                    } );
                },
                "aoColumns" : [{
                        "mDataProp" : "archivesNumber",
                        "sTitle" : "档案号",
                        "sDefaultContent" : "",
                        "sClass" : "center"
                    }, {
                        "mDataProp" : "categoryId",
                        "sTitle" : "分类号",
                        "sDefaultContent" : "",
                        "sClass" : "center"
                    }, {
                        "mDataProp" : "fileNumber",
                        "sTitle" : "案卷号",
                        "sDefaultContent" : "",
                        "sClass" : "center"
                    }, {
                        "mDataProp" : "title",
                        "sTitle" : "题名",
                        "sDefaultContent" : "",
                        "sClass" : "center"
                    }, {
                        "mDataProp" : "projectName",
                        "sTitle" : "项目名称",
                        "sDefaultContent" : "",
                        "sClass" : "center"
                    }, {
                        "mDataProp" : "id",
                        "sTitle" : "操作",
                        "sDefaultContent" : "",
                        "sClass" : "center"
                    }],
                    "aoColumnDefs": [ {
                        "aTargets": [ -1 ],
                        "mData": "download_link",
                        "mRender": function ( data, type, full ) {
                            return '<a href="'+data+'">Download</a>';
                        }
                    } ]
            });
        });</script>
}
