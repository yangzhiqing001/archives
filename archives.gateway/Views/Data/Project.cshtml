@model LoginUserModel
@{
    ViewBag.Title = "项目设置";
}


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-4">
                <h1>项目设置</h1>
            </div>
            <div class="col-sm-8">

            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content" style="padding-bottom:5px;padding-top:10px">
    <div class="container-fluid">
        <!-- SELECT2 EXAMPLE -->
        <div class="card card-default">
            <div class="card-body">
                <form>
                    <div class="row">
                        <div class="form-group col-sm-6">
                            <input type="text" id="projectName" class="form-control">
                        </div>
                        <div class="col-sm-4">
                            <input type="button" id="btnNew" value="新建项目" class="btn btn-success float-left mx-4">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-12 col-sm-12">
                            <label>项目列表</label>
                            <select multiple="" class="form-control" style="height:300px;" id="selectProjects">
                                
                            </select>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-12">
                            <input type="button" id="btnDel" value="删除选中的项目" class="btn btn-success">
                        </div>
                    </div>
                </form>
            </div>
            <div>

            </div>
        </div>
    </div>
</section>

@section PageCss
    {
    <link rel="stylesheet" href="~/plugins/jquery-ui/jquery-ui.min.css">
    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="~/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css">
    <link rel="stylesheet" href="~/plugins/toastr/toastr.min.css">
}

@section PagePlusgins
    {
    <script src="~/plugins/jquery-ui/jquery-ui.min.js"></script>
    <!-- SweetAlert2 -->
    <script src="~/plugins/sweetalert2/sweetalert2.min.js"></script>
    <!-- Toastr -->
    <script src="~/plugins/toastr/toastr.min.js"></script>
}

@section PageScripts
{
    <script>
    var $selectProjects = $("#selectProjects");
    function getProjects() {
        $.ajax({
            headers: {
                Accept: "application/json; charset=utf-8",
                Authorization: "Bearer @Model.Token"
            },
            method: 'get',
            url: "@Url.Content("~/archives/getAllProject")",
            contentType: "application/json; charset=utf-8",
            dataType: 'json',
            beforeSend: function () {
                $(".card").loading();
            },
            complete: function () {
                $(".card").loading('stop');
            },
            success: function (result) {
                if (result && result.success) {
                    $selectProjects.empty();
                    for (var i = 0; i < result.data.length; i++) {
                        $selectProjects.append("<option value=" + result.data[i].id + ">" + result.data[i].name + "</option>");
                    }
                }
                else {
                    Toast.fire({
                        type: 'error',
                        title: result.message
                    })
                }
            }
        });
    }
    $(function () {
        Toast = Swal.mixin({
            toast: true,
            position: 'top-end',
            showConfirmButton: false,
            timer: 3000
        });
        getProjects();
        $("#btnDel").on("click", function () {
            var projectId = $selectProjects.val();
            if (projectId.length === 0) {
                Toast.fire({
                    type: 'error',
                    title: '先选中要删除的项目'
                })
                return;
            }

            $.ajax({
                headers: {
                    Accept: "application/json; charset=utf-8",
                    Authorization: "Bearer @Model.Token"
                },
                method: 'post',
                url: "@Url.Content("~/archives/deleteProject")",
                data: JSON.stringify({
                    projectId: projectId.join(","),
                }),
                contentType: "application/json; charset=utf-8",
                dataType: 'json',
                beforeSend: function () {
                    $(".card").loading();
                },
                complete: function () {
                    $(".card").loading('stop');
                },
                success: function (result) {
                    if (result && result.success) {
                        Toast.fire({
                            type: 'success',
                            title: '删除成功'
                        })
                        getProjects();
                    }
                    else {
                        Toast.fire({
                            type: 'error',
                            title: result.message
                        })
                    }
                }
            });
        });
        $("#btnNew").on("click", function () {
            if ($("#projectName").val() === '') {
                Toast.fire({
                    type: 'success',
                    title: '请输入项目名.'
                });
                $("#projectName").focus();
                return;
            }
            $.ajax({
                headers: {
                    Accept: "application/json; charset=utf-8",
                    Authorization: "Bearer @Model.Token"
                },
                method: 'POST',
                url: "@Url.Content("~/archives/addProject")",
                data: JSON.stringify({
                    projectName: $("#projectName").val(),
                }),
                contentType: "application/json; charset=utf-8",
                dataType: 'json',
                beforeSend: function () {
                    $(".card").loading();
                },
                complete: function () {
                    $(".card").loading('stop');
                },
                success: function (result) {
                    if (result && result.success) {
                        Toast.fire({
                            type: 'success',
                            title: '添加成功.'
                        });
                        $("#projectName").val("");
                        getProjects();
                    }
                    else {
                        Toast.fire({
                            type: 'error',
                            title: result.message
                        })
                    }
                }
            });
        });
    });
    </script>
}
